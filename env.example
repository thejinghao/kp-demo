# Base URL for Klarna APIs (Playground by default)
KLARNA_API_BASE_URL=https://api.playground.klarna.com

# Public defaults for KP UI (used to prefill inputs on the client)
NEXT_PUBLIC_KLARNA_API_USERNAME=
NEXT_PUBLIC_KLARNA_API_PASSWORD=

# Public client identifier for Klarna SDKs (OSM/KEC)
# Override per env; default is a playground client key
NEXT_PUBLIC_KLARNA_CLIENT_ID=

# Inspector is always on; max captured content size
INSPECTOR_MAX_CONTENT_CHARS=10000

# Stripe (test mode)
# Server secret key (DO NOT commit in real env files)
STRIPE_SECRET_KEY=
# Client publishable key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# USD one-time price for Checkout Sessions
STRIPE_PRICE_ID_USD=
# Hosted Checkout redirect URLs (optional; defaults to request origin)
# Leave unset to derive from deployment URL automatically. Example overrides:
# STRIPE_SUCCESS_URL=https://kp-demo.vercel.app/apps/stripe/success?session_id={CHECKOUT_SESSION_ID}
# STRIPE_CANCEL_URL=https://kp-demo.vercel.app/apps/stripe/cancel
STRIPE_SUCCESS_URL=
STRIPE_CANCEL_URL=

# HPP dynamic success URL base (optional)
# If unset, defaults to request origin. Example:
# HPP_SUCCESS_URL_BASE=https://kp-demo.vercel.app/apps/hpp
HPP_SUCCESS_URL_BASE=
